{% extends 'base.html.twig' %}

{% block title %}Bookings index{% endblock %}
{% block head %}{{ encore_entry_link_tags('booking_index') }}{% endblock %}
{% block body %}
    <h1>Bookings index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Started_at</th>
                <th>End_at</th>
                <th>Deleted_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.startedAt ? booking.startedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ booking.endAt ? booking.endAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ booking.deletedAt ? booking.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('bookings_show', {'id': booking.id}) }}">show</a>
                    <a href="{{ path('bookings_edit', {'id': booking.id}) }}">edit</a>
                </td>
            </tr>

        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('bookings_new', {activity : activity.id}) }}">Create new</a>


    <div id="calendar"></div>

    {% block javascripts %}
        <script>
            const activityId = {{ activity.id }}
        </script>

        {{ encore_entry_script_tags('booking_index') }}
    {% endblock %}
{% endblock %}
