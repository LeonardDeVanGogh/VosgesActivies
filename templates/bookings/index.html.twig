{% extends 'base.html.twig' %}

{% block title %}Activitité : {{ activity.name }} {% endblock %}
{% block head %}
    {{ encore_entry_link_tags('booking_index') }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
{% endblock %}

{% block body %}

    <h1>Bookings index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Started_at</th>
            <th>End_at</th>
            <th>Deleted_at</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.startedAt ? booking.startedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ booking.endAt ? booking.endAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ booking.deletedAt ? booking.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('bookings_show', {'id': booking.id}) }}">show</a>
                    <a href="{{ path('bookings_edit', {'id': booking.id}) }}">edit</a>
                </td>
            </tr>

        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
    <a href="/bookings/new/{{ activity.id }}">Create new</a>

    <div class="row">
        <div id="calendar" class="col-lgl-12"></div>
    </div>

    <div class="modal fade" id="bookingOptions" data-bookingId="" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Réservation :</p>
                    <button type="button" id="bookingReservation" class="btn btn-primary">Réserver l'activité</button>
                    {% if app.user %}
                        {% if app.user.id() == activity.user.id() %}
                            <button type="button" id="bookingCancellation" class="btn btn-primary">Annuler la réservation</button>
                            <button type="button" id="bookingRemoval" class="btn btn-primary">Effacer la réservation</button>
                        {% endif %}
                    {% endif %}


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
    
    <div class="modal fade" id="bookingCreation"  data-start="" data-end="" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Réserver</p>
                    <button type="button" id="bookingAdd" class="btn btn-primary">Créer une réservation</button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

    <script>
        let activityId = {{ activity.id }};
        {% if app.user%}
            let user = {{ app.user.id }};
        {% endif %}
    </script>

    {{ encore_entry_script_tags('booking_index') }}
{% endblock %}