{%  extends 'base.html.twig' %}


{% block body %}
    <section class="container py-5">
        <div class="row text-center pt-5 pb-3">
            <div class="col-lg-12 m-auto">
                <h1 class="h1">
                    {% if editMode %}
                        Modification
                    {% else%}
                        Création
                    {% endif%}
                    d'un type de signalement
                </h1>

                {{ form_start(formReportReason) }}
                {{ form_widget(formReportReason.reason) }}
                {{ form_errors(formReportReason.reason) }}
                <button type="submit" class="btn btn-success col-lg-8">
                    {% if editMode %}
                        Modifier
                    {% else %}
                        Créer
                    {% endif %}
                </button>
                {{ form_end(formReportReason) }}
            </div>
        </div>
    </section>
{% endblock %}
